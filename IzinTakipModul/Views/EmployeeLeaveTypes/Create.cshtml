@model IzinModulCommon.VModels.EmployeeLeaveTypeVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create">
<div class="card">
    <div class="card-header">
        <h2 class="mb-0">İzin Tipi Ekle</h2>
    </div>
    <div class="card-body d-flex">
        <div class="image-container mr-3">
            <img src="https://avatars.dzeninfra.ru/get-zen_doc/4447423/pub_62f416e93ea0e16da7e33b22_62f4180de1cfee76d71efc89/scale_1200" />
        </div>
        <div class="flex-grow-1">
            
                <div  class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"><b>İzin Tipi</b></label>
                    <br />
                    
                    <input asp-for="Name" style="width:1030px;"  class="form-control" placeholder="Eklenecek türü giriniz ..." />
                    <span asp-validation-for="Name"></span>
                    <label asp-for="DefaultDays" class="control-label"><b>Sabit Gün Sayısı</b></label>
                    <br />
                  
                    <input asp-for="DefaultDays" style="width:1030px;" class="form-control" placeholder="" />
                
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Ekle</button>
                </div>
           
        </div>
    </div>
</div>
</form>


<style>
    .card {
        margin-bottom: 20px;
        background: rgb(238,174,202);
        background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
    }

    .card-header h2 {
        font-size: 1.5rem;
    }

    .image-container {
        width: 300px;
        height: auto;
        overflow: hidden;
        border: 1px solid #ccc;
        border-radius: 20px;
    }

        .image-container img {
            display: block;
            width: 100%;
            height: auto;
        }

    .d-flex {
        display: flex;
        align-items: center;
    }

    .mr-3 {
        margin-right: 1rem;
    }
</style>
